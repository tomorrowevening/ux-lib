{
  "name": "@tomorrow-evening/ux-lib",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/ux-lib.umd.js",
  "module": "./dist/ux-lib.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/ux-lib.es.js",
      "require": "./dist/ux-lib.umd.js"
    },
    "./styles": "./dist/ux-lib.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build --mode lib",
    "build:lib": "vite build --mode lib",
    "build:preview": "vite build",
    "lint": "eslint .",
    "preview": "npm run build:preview && vite preview",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "sass": "^1.89.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
